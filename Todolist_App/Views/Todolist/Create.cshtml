@model Todolist_App.Models.Tarea

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear una nueva tarea</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DescripcionTarea"> Tarea</label>
                    <input asp-for="DescripcionTarea" class="form-control" />
                    <span asp-validation-for="DescripcionTarea" class="text-danger"></span>
                </div>

                <!--
                    Si huebiera 
                    <div class="form-group">
                    <label asp-for="DescripcionTarea" class="custom-control-label"></label>
                    <input asp-for="DescripcionTarea" class="form-control" />
                </div>
                    -->

                <div class="form-group">
                    <input  type="submit" value="Crear" class="btn btn-primary"/>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/> }

}

