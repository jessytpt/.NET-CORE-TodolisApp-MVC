@model IEnumerable<Todolist_App.Models.Tarea>


@{
    ViewData["Title"] = "Lista de Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Tareas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Todolist"> Agregar Tarea</a>
        </div>
    </div>

    <div class="row">
        @if(Model.Count()>0) { 
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Id de Tarea</td>
                        <td>Descripcion</td>
                        <td>Estado</td>
                        <!--<td>@Html.DisplayNameFor(m => m.EstadoTarea)</td>-->
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach ( var item in Model) 
                    { 
                    <tr>
                        <td>@item.IdTarea</td>
                        <td>@item.DescripcionTarea</td>
                        <td>@item.EstadoTarea </td>
                        <td>Acciones</td>
                    </tr>
                    }
                </tbody>

            </table>
        
        }
        else{
            <p>No hay registros</p>
        }
    </div>

</div>

