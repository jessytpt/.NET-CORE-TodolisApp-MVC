@model IEnumerable<Todolist_App.Models.Tarea>


@{
    ViewData["Title"] = "Lista de Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"] != null) {
        <div class="alert alert-warning alert-dismissible fade show" role-alert>
            @TempData["mensaje"] 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Tareas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Todolist"> Agregar Tarea</a>
        </div>
    </div>

    <div class="row">
        @if(Model.Count()>0) { 
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Id de Tarea</td>
                        <td>Descripcion</td>
                        <td>Estado</td>
                        <!--<td>@Html.DisplayNameFor(m => m.EstadoTarea)</td>-->
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach ( var item in Model) 
                    { 
                    <tr>
                        <td>@item.IdTarea</td>
                        <td>@item.DescripcionTarea</td>
                        <!--<td>@item.EstadoTarea </td>-->
                        <td>
                            @Html.EditorFor(@item.EstadoTarea.GetValueOrDefault())
                        </td>
                        <td>
                            <a asp-controller="Todolist" asp-action="Edit" asp-route-id="@item.IdTarea" class="btn btn-warning">Editar</a>
                            <a asp-controller="Todolist" asp-action="Delete" asp-route-id="@item.IdTarea" class="btn btn-danger">Eliminar</a>
                            <!-- @Html.ActionLink("Delete","Eliminar",new {id=item.IdTarea} )-->

                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        
        }
        else{
            <p>No hay registros</p>
        }
    </div>

</div>

