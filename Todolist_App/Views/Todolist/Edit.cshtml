@model Todolist_App.Models.Tarea


@{
    ViewData["Title"] = "Editar Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Tarea</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="IdTarea"/>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DescripcionTarea"> Tarea</label>
                    <input asp-for="DescripcionTarea" class="form-control" />
                    <span asp-validation-for="DescripcionTarea" class="text-danger"></span>
                </div>

                <!--
                    Si huebiera
                    <div class="form-group">
                    <label asp-for="DescripcionTarea" class="custom-control-label"></label>
                    <input asp-for="DescripcionTarea" class="form-control" />
                </div>
                    -->

                <div class="form-group">
                    <input type="submit" value="Editar tarea" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


